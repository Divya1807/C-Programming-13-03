//Assignment-3 Difference between maximum and minimum
#include<stdio.h>
main(){
	int i,n,a[n],max,min,diff;
	scanf("%d",&n);
	for(i=0;i<n;i++)
	{
	  scanf("%d",&a[i]);
    }
	   min=max=a[0];
	   for(i=1;i<n;i++)
	   {
	   if(a[i]>max)
	   max=a[i];
	   if(a[i]<min)
	   min=a[i];
    }
      printf("max and min are:%d %d",max,min);
	  diff=max-min;
	  printf("\ndiff is %d",diff);
}
